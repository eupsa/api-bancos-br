server
{
    listen 80;
    listen 443 ssl http2;
    server_name api.bancos.br.pedroaraujo.dev;

    # SITE REACT
    root /www/wwwroot/api-bancos-br/out;
    index index.html;

    include /www/server/panel/vhost/nginx/extension/api.bancos.br.pedroaraujo.dev/*.conf;

    #CERT-APPLY-CHECK--START
    include /www/server/panel/vhost/nginx/well-known/api.bancos.br.pedroaraujo.dev.conf;
    #CERT-APPLY-CHECK--END

    #SSL-START SSL related configuration, do NOT delete or modify the next line of commented-out 404 rules
    #error_page 404/404.html;

    #HTTP_TO_HTTPS_START
    if ($server_port !~ 443){
        rewrite ^(/.*)$ https://$host$1 permanent;
    }
    #HTTP_TO_HTTPS_END

    ssl_certificate     /www/server/panel/vhost/cert/api.bancos.br.pedroaraujo.dev/fullchain.pem;
    ssl_certificate_key /www/server/panel/vhost/cert/api.bancos.br.pedroaraujo.dev/privkey.pem;
    ssl_protocols TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_ciphers EECDH+CHACHA20:EECDH+CHACHA20-draft:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
    ssl_prefer_server_ciphers on;
    add_header Strict-Transport-Security "max-age=31536000";
    #SSL-END

    #ERROR-PAGE-START
    error_page 404 /404.html;
    error_page 502 /502.html;
    #ERROR-PAGE-END

    # ðŸ”¥ API â€” localizaÃ§Ã£o independente do root
    location ^~ /api/ {
        alias /www/wwwroot/api-bancos-br/api/;

        # Permitir execuÃ§Ã£o do PHP dentro da API
        location ~ \.php$ {
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $request_filename;
            fastcgi_pass unix:/tmp/php-cgi-83.sock;
        }
    }

    # SPA â€” React (fallback para index.html)
    location / {
        try_files $uri $uri/ /index.html;
    }

    include enable-php-83.conf;

    # Regras personalizadas do aaPanel
    include /www/server/panel/vhost/rewrite/api.bancos.br.pedroaraujo.dev.conf;

    # Arquivos estÃ¡ticos comuns
    location ~ .*\.(gif|jpg|jpeg|png|bmp|swf)$ {
        expires 30d;
    }

    location ~ .*\.(js|css)$ {
        expires 12h;
    }

    access_log /www/wwwlogs/api.bancos.br.pedroaraujo.dev.log;
    error_log  /www/wwwlogs/api.bancos.br.pedroaraujo.dev.error.log;
}
